{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/hooks/form-submission/stop-value.json",
  "title": "FormSubmissionStopValue",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "const": "reject"
    },
    "message": {
      "type": "string",
      "description": "Do not save the form submission. Respond with an error message that will be shown to the user."
    }
  },
  "required": ["action", "message"]
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/hooks/form-submission/value.json",
  "type": "object",
  "title": "FormSubmissionValue",
  "properties": {
    "form": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      },
      "required": ["id", "title"]
    },
    "formData": {
      "$ref": "../../context-data/context-data.json",
      "description": "The data that was submitted in the form."
    },
    "sessionId": {
      "type": "string"
    },
    "stepId": {
      "type": "string"
    },
    "finalStep": {
      "type": "boolean"
    },
    "submitterIpAddress": {
      "type": "string"
    },
    "saveToDatabase": {
      "type": "boolean",
      "description": "Whether the form submission should be saved to the database. If there are multiple extensions handling this hook, the value of the last hook is used."
    },
    "user": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        }
      },
      "required": ["id"]
    },
    "site": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "domain": {
          "type": "string"
        }
      },
      "required": ["id", "domain"]
    }
  },
  "required": ["form", "formData", "sessionId", "finalStep", "saveToDatabase", "site"]
}

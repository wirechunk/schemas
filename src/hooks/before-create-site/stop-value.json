{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/hooks/before-create-site/stop-value.json",
  "title": "BeforeCreateSiteStopValue",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "const": "reject"
    },
    "message": {
      "type": "string",
      "description": "Do not create a site. Respond with an error message that will be shown to the user."
    }
  },
  "required": ["action", "message"]
}
